{
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 2017,
        "sourceType": "module"
    },
    "env": {
        "node": true,
        "es6": true
    },
    "rules": {
        "semi": ["error", "never"],
        "quotes": ["error", "single"],
        "no-console": "warn"
    }
}